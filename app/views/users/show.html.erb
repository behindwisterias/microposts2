<div class="row">
  
  <aside class = "col-xs-6 col-md-4 block">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
    

  <div class = "col-xs-6 col-md-8 block">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @page2 %> <%# ページネーション機能（show.html.erb）%>
      </ol>
      <%= paginate @page2 %> <%# ページネーション機能（show.html.erb）%>
    <% end %>
  </div>
  
</div>
